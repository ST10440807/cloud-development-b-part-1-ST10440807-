@model IEnumerable<ABCRetailers.Models.Customer>

@{
    ViewData["Title"] = "Customers";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="fw-bold text-light">Customer List</h2>
    <a asp-action="AddCustomer" class="btn btn-success">
        <i class="bi bi-person-plus"></i> Add Customer
    </a>
</div>

<div class="card shadow-lg">
    <div class="card-body p-0">
        <table class="table table-striped table-hover mb-0 align-middle">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Customer_Name)</th>
                    <th>@Html.DisplayNameFor(model => model.email)</th>
                    <th>@Html.DisplayNameFor(model => model.password)</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Customer_Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.email)</td>
                        <td>@Html.DisplayFor(modelItem => item.password)</td>
                        <td class="text-center">
                            <form asp-action="Delete" method="post" class="d-inline">
                                <input type="hidden" name="partitionKey" value="@item.PartitionKey" />
                                <input type="hidden" name="rowKey" value="@item.RowKey" />
                                <button type="submit" class="btn btn-sm btn-danger"
                                        onclick="return confirm('Are you sure you want to delete this customer?')">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@model List<ABCRetailers.Models.FileModel>

@{
    ViewData["Title"] = "Contracts";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-light"><i class="bi bi-files"></i> Contracts</h2>
</div>

<!-- Message Alert -->
@if (TempData["Message"] != null)
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Upload Form -->
<div class="card shadow-lg mb-4">
    <div class="card-body">
        <h5 class="card-title"><i class="bi bi-upload"></i> Upload a Contract</h5>
        <form asp-action="UploadFile" method="post" enctype="multipart/form-data" class="mt-3">
            <div class="row g-2 align-items-center">
                <div class="col-md-8">
                    <input type="file" name="file" class="form-control" />
                </div>
                <div class="col-md-4 d-grid">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-cloud-arrow-up"></i> Upload
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Display Uploaded Files -->
@if (Model != null && Model.Count > 0)
{
    <div class="card shadow-lg">
        <div class="card-body">
            <h5 class="card-title"><i class="bi bi-folder2-open"></i> Uploaded Contracts</h5>

            <table class="table table-striped table-hover align-middle mt-3">
                <thead class="table-dark">
                    <tr>
                        <th>File Name</th>
                        <th>Last Modified</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var file in Model)
                    {
                        <tr>
                            <td>@file.Name</td>
                            <td>@file.LastModified?.ToString("g")</td>
                            <td class="text-center">
                                <a asp-action="DownloadFile" asp-route-fileName="@file.Name"
                                   class="btn btn-sm btn-outline-success">
                                    <i class="bi bi-download"></i> Download
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning">
        <i class="bi bi-exclamation-circle"></i> No files found.
    </div>
}
